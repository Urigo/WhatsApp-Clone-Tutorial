{
  "name": "whatsapp-clone-server",
  "description": "A newly created Tortilla project",
  "repository": {
    "type": "git",
    "url": "https://github.com/Urigo/WhatsApp-Clone-Server.git"
  },
  "private": true,
  "scripts": {
    "prestart": "yarn codegen",
    "start": "ts-node index.ts",
    "prebuild": "yarn codegen",
    "prod": "node dist/index.js",
    "build": "tsc",
    "test": "TZ=\"Asia/Jerusalem\" jest --runInBand --forceExit",
    "codegen": "gql-gen",
    "format": "prettier '**/*.ts' --write",
    "loadtest": "yarn artillery run artillery.yml > loadtest.log",
    "loadtest:limit": "yarn artillery run artillery-limit.yml > loadtest.log"
  },
  "jest-junit": {
    "outputDirectory": "./test-results"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.2.1-alpha-3d654462.34",
    "@graphql-codegen/typescript": "1.2.1-alpha-3d654462.34",
    "@graphql-codegen/typescript-resolvers": "1.2.1-alpha-3d654462.34",
    "@types/bcrypt": "3.0.0",
    "@types/body-parser": "1.17.0",
    "@types/cookie": "0.3.3",
    "@types/cookie-parser": "1.4.1",
    "@types/cors": "2.8.5",
    "@types/express": "4.17.0",
    "@types/faker": "4.1.5",
    "@types/graphql": "14.2.0",
    "@types/graphql-iso-date": "3.3.1",
    "@types/jest": "24.0.13",
    "@types/jsonwebtoken": "8.3.2",
    "@types/lodash": "4.14.134",
    "@types/node": "12.0.7",
    "@types/pg": "7.4.14",
    "artillery": "1.6.0-28",
    "jest": "24.8.0",
    "jest-junit": "6.4.0",
    "prettier": "1.18.1",
    "ts-jest": "24.0.2",
    "ts-node": "8.2.0",
    "typescript": "3.5.1"
  },
  "dependencies": {
    "@graphql-modules/core": "0.7.5",
    "@graphql-modules/di": "0.7.5",
    "@safe-api/middleware": "0.0.2",
    "apollo-datasource-rest": "0.5.0",
    "apollo-server-express": "2.6.2",
    "apollo-server-testing": "2.6.2",
    "axios": "0.19.0",
    "bcrypt": "3.0.6",
    "body-parser": "1.19.0",
    "cookie": "0.4.0",
    "cookie-parser": "1.4.4",
    "cors": "2.8.5",
    "dataloader": "1.4.0",
    "date-fns": "1.30.1",
    "express": "4.17.1",
    "faker": "4.1.0",
    "graphql": "14.3.1",
    "graphql-import": "0.7.1",
    "graphql-iso-date": "3.6.1",
    "graphql-postgres-subscriptions": "1.0.5",
    "graphql-tools": "4.0.4",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.11",
    "pg": "7.11.0",
    "reflect-metadata": "0.1.13",
    "sql-template-strings": "2.2.2"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "reporters": [
      "default",
      "jest-junit"
    ]
  }
}